<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

    <ListView
        android:id="@+id/fragment_chat_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:stackFromBottom="true"
        android:transcriptMode="normal"
        android:divider="@null"
        android:dividerHeight="0dp"
        >
    </ListView>

    <RelativeLayout
        android:id="@+id/fragment_chat_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        >

        <EditText
            android:id="@+id/fragment_chat_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:background="@color/icons"
            android:textColor="@color/primary_text"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/fragment_chat_buttonSend"

            />
        <Button
            android:id="@+id/fragment_chat_buttonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_chat_send_button_text"
            android:layout_alignBottom="@+id/fragment_chat_edittext"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>