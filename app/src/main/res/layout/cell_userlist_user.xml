<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/primary_dark"
    >
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icons"
        >
        <ImageView
            android:id="@+id/cell_userlist_statusicon"
            android:layout_width="@dimen/fragment_userlist_statusicon_width"
            android:layout_height="@dimen/fragment_userlist_statusicon_height"
            android:src="@drawable/jabber_offline"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/cell_userlist_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:background="@color/icons"
            android:layout_toRightOf="@+id/cell_userlist_statusicon"
            android:layout_below="@+id/cell_userlist_new_messages_count"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/cell_userlist_new_messages_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>